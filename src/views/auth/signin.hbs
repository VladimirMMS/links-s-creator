<div class="container p-4 mt-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SingIn</h3>
                </div>
                <div class="card-body">
                    <img src="img/logo1.png" alt="logo vla" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="User Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SignIn</button>
                        </div>
                    </form>
                    <form action="/signup">
                        <div class="form-group">
                            <label for="reg">Are you not register?</label>
                            <button class="btn btn-primary btn-block" id="reg">Create an account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>